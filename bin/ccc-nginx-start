#!/bin/bash

/usr/bin/docker stop ccc-nginx
/usr/bin/docker rm ccc-nginx
/usr/bin/docker run "$@" \
  --rm \
  --name ccc-nginx \
  --hostname www.carbon.cc \
  --network www \
  --publish 80:8000 \
  --publish 443:8443 \
  --volume /opt/ccc-nginx/http.d:/etc/nginx/http.d:ro \
  --volume /etc/letsencrypt/live/carbon.cc/fullchain.pem:/etc/ssl/certs/www-carbon-cc.crt:ro \
  --volume /etc/letsencrypt/live/carbon.cc/privkey.pem:/etc/ssl/private/www-carbon-cc.key:ro \
  ccc-nginx:latest
